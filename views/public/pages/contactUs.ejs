<main class="main">
    <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
        <%- include("../../includes/bread") %>
            <%- include("../../messages/error") %>
                <%- include("../../messages/message") %>
    </nav><!-- End .breadcrumb-nav -->
    <div class="container">
        <div class="page-header page-header-big text-center"
            style="background-image: url('assets/images/contact-header-bg.jpg')">
            <h1 class="page-title text-white">تماس با ما<span class="text-white">ارتباط خود را با ما حفظ
                    کنید</span></h1>
        </div><!-- End .page-header -->
    </div><!-- End .container -->

    <div class="page-content pb-0">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-2 mb-lg-0">
                    <h2 class="title mb-1">اطلاعات تماس</h2><!-- End .title mb-2 -->
                    <p class="mb-3">
                        <%= setting.text %>
                    </p>
                    <div class="row">
                        <div class="col-sm-7">
                            <div class="contact-info">
                                <h3>دفتر</h3>

                                <ul class="contact-list">
                                    <li>
                                        <i class="icon-map-marker"></i>
                                        <%= setting.address %>
                                    </li>
                                    <li>
                                        <i class="icon-map-marker"></i>
                                        <%= setting.address2 %>
                                    </li>
                                    <li>
                                        <i class="icon-phone"></i>
                                        <a href="tel:#">
                                            <%= setting.phoneNumber %>
                                        </a>
                                    </li>
                                    <li>
                                        <i class="icon-phone"></i>
                                        <a href="tel:#">
                                            <%= setting.phoneNumber2 %>
                                        </a>
                                    </li>
                                    <li>
                                        <i class="icon-envelope"></i>
                                        <a href="mailto:#">
                                            <%= setting.email %>
                                        </a>
                                    </li>
                                    <li>
                                        <i class="icon-envelope"></i>
                                        <a href="mailto:#">
                                            <%= setting.email2 %>
                                        </a>
                                    </li>
                                </ul><!-- End .contact-list -->
                            </div><!-- End .contact-info -->
                        </div><!-- End .col-sm-7 -->

                    </div><!-- End .row -->
                </div><!-- End .col-lg-6 -->
                <div class="col-lg-6">
                    <h2 class="title mb-1">سوالی دارید؟</h2><!-- End .title mb-2 -->
                    <p class="mb-2">با استفاده از فرم زیر می توانید با ما ارتباط برقرار کنید</p>

                    <form action="/contactUs" method="post" class="contact-form mb-3">
                        <div class="row">
                            <div class="col-sm-6">
                                <label for="cname">نام</label>
                                <input type="text" class="form-control" id="cname" name="fullname"
                                    value="<%= formData ? formData.fullname : '' %>">
                            </div><!-- End .col-sm-6 -->

                            <div class="col-sm-6">
                                <label for="cemail">ایمیل</label>
                                <input type="email" class="form-control" id="cemail" name="email"
                                    value="<%= formData ? formData.email : '' %>">
                            </div><!-- End .col-sm-6 -->
                        </div><!-- End .row -->

                        <div class="row">
                            <div class="col-sm-6">
                                <label for="cphone">شماره موبایل</label>
                                <input type="tel" class="form-control" id="cphone" name="phone"
                                    value="<%= formData ? formData.phone : '' %>">
                            </div><!-- End .col-sm-6 -->

                            <div class="col-sm-6">
                                <label for="csubject">موضوع</label>
                                <input type="text" class="form-control" id="csubject" name="subject"
                                    value="<%= formData ? formData.subject : '' %>">
                            </div><!-- End .col-sm-6 -->
                        </div><!-- End .row -->

                        <label for="cmessage">پیام</label>
                        <textarea class="form-control" cols="30" rows="4" id="cmessage" name="text"
                            value="<%= formData ? formData.text : '' %>"></textarea>

                        <button type="submit" class="btn btn-outline-primary-2 btn-minwidth-sm float-right">
                            <span>تایید و ارسال</span>
                            <i class="icon-long-arrow-left"></i>
                        </button>
                    </form><!-- End .contact-form -->
                </div><!-- End .col-lg-6 -->
            </div><!-- End .row -->

            <hr class="mt-4 mb-5">
        </div><!-- End .container -->
        <div class="col-12 d-flex text-center">
            <div class="bg-white w-100">
                <%- setting.googleaddress %>
            </div>
        </div>
    </div><!-- End .page-content -->
</main><!-- End .main -->