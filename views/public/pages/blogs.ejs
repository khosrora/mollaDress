<main class="main">
    <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">
                <%= title %><span>MOLLA</span>
            </h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->
    <%- include("../../includes/bread") %>

        <div class="page-content">
            <div class="container">
                <div class="entry-container max-col-2" data-layout="fitRows">
                    <%for (let i of blogs) {%>
                        <div class="entry-item lifestyle shopping col-sm-6">
                            <article class="entry entry-grid text-center">
                                <figure class="entry-media">
                                    <a href="/blog/<%= i.slug %>">
                                        <img src="/uploads/images/blogs/<%= i.image %>" alt="<%= i.title %>"
                                            style="height: 55rem; object-fit: cover;">
                                    </a>
                                </figure><!-- End .entry-media -->

                                <div class="entry-body">
                                    <div class="entry-meta">
                                        <span class="entry-author">
                                            نویسنده : <a href="/blog/<%= i.slug %>">
                                                <%= i.user.fullname %>
                                            </a>
                                        </span>
                                        <span class="meta-separator">|</span>
                                        <a href="/blog/<%= i.slug %>">
                                            <%= jalaliMoment(i.createdAt) %>
                                        </a>
                                    </div><!-- End .entry-meta -->

                                    <h2 class="entry-title text-center">
                                        <a href="/blog/<%= i.slug %>">
                                            <%= i.title %>
                                        </a>
                                    </h2><!-- End .entry-title -->

                                    <div class="entry-cats text-center">
                                        <% for (let item of i.items ) {%>
                                            <a href="/blog/<%= i.slug %>">
                                                <%= item %>
                                            </a>،
                                            <%}%>
                                    </div><!-- End .entry-cats -->

                                    <div class="entry-content text-center">
                                        <p>
                                            <%- truncate(i.desc , 300) %>
                                        </p>
                                        <a href="/blog/<%= i.slug %>" class="read-more">ادامه
                                            خواندن</a>
                                    </div><!-- End .entry-content -->
                                </div><!-- End .entry-body -->
                            </article><!-- End .entry -->
                        </div><!-- End .entry-item -->
                        <%}%>
                </div><!-- End .entry-container -->
                <!-- ! paginagte -->
                <%- include("../includes/paginate") %>
                    <!-- ! paginagte -->
                    <%- include("../includes/suggestBlog.ejs") %>
            </div><!-- End .container -->
        </div><!-- End .page-content -->
</main><!-- End .main -->