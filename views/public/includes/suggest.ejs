<div class="container">
    <h2 class="title text-center mb-4">محصولاتی که شاید بپسندید</h2><!-- End .title text-center -->

    <div class="owl-carousel owl-simple carousel-equal-height carousel-with-shadow" data-toggle="owl" data-owl-options='{
                "nav": false, 
                "dots": true,
                "margin": 20,
                "loop": false,
                "rtl": true, 
            "responsive": {
                    "0": {
                        "items":1
                    },
                    "480": {
                        "items":2
                    },
                    "768": {
                        "items":3
                    },
                    "992": {
                        "items":4
                    },
                    "1200": {
                        "items":4,
                        "nav": true,
                        "dots": false
                    }
                }
            }'>
        <% for (let i of suggests) {%>
            <div class="product product-7 text-center">
                <figure class="product-media">
                    <span class="product-label label-new">
                        <%= i.view %> بازدید
                    </span>
                    <a href="/product/<%= i.slug %>">
                        <img src="/uploads/images/products/<%= i.image[1] %>" alt="تصویر محصول" class="product-image">
                    </a>

                    <div class="product-action">
                        <a href="/products/<%= i.slug %>" class="btn-product btn-cart"><span>مشاهده سریع</span></a>
                    </div><!-- End .product-action -->
                </figure><!-- End .product-media -->

                <div class="product-body">
                    <div class="product-cat text-center">
                        <a href="#">
                            <%= i.title %>
                        </a>
                    </div><!-- End .product-cat -->
                    <h3 class="product-title text-center"><a href="product.html">
                            <%- truncate( i.desc , 150) %>
                        </a></h3>
                    <!-- End .product-title -->
                    <div class="product-price">
                        <%= i.price %> تومان
                    </div><!-- End .product-price -->

                    <div class="product-nav product-nav-thumbs">
                        <% for (let image of i.image ) {%>
                            <a href="#" class="active">
                                <img src="/uploads/images/products/<%= image %>" alt="<%= i.title %>">
                            </a>
                            <%}%>
                    </div><!-- End .product-nav -->
                </div><!-- End .product-body -->
            </div><!-- End .product -->
            <%}%>

    </div><!-- End .owl-carousel -->
</div><!-- End .container -->