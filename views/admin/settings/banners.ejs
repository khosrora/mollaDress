<link href="/admin/css/dataTables.bootstrap.css" rel="stylesheet" />
<style>
    .DTTT {
        display: none !important;
    }
</style>

<!-- Main Container -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">

        <%- include("../includes/aside.ejs") %>

            <!-- Page Content -->
            <div class="page-content">
                <%- include("../../messages/message.ejs") %>
                    <%- include("../../messages/error.ejs") %>
                        <%- include("../includes/breadCrumb.ejs") %>
                            <div class="page-body">
                                <div class="col-xs-12 col-md-12">
                                    <div class="widget">
                                        <div class="widget-header ">
                                            <span class="widget-caption">تنظیمات</span>
                                            <div class="widget-buttons">
                                                <a href="#" data-toggle="maximize">
                                                    <i class="fa fa-expand"></i>
                                                </a>
                                                <a href="#" data-toggle="collapse">
                                                    <i class="fa fa-minus"></i>
                                                </a>
                                                <a href="#" data-toggle="dispose">
                                                    <i class="fa fa-times"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="widget-body">
                                            <div class="table-toolbar">
                                                <a href="/admin/createBanner" class="btn btn-default">
                                                    ساخت بنر جدید
                                                </a>
                                            </div>
                                            <table class="table table-striped table-hover table-bordered"
                                                id="editabledatatable">
                                                <thead>
                                                    <tr role="row">
                                                        <th>
                                                            عکس
                                                        </th>
                                                        <th>
                                                            عنوان
                                                        </th>
                                                        <th>
                                                            وضعیت
                                                        </th>
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <% for (let item of banners) {%>
                                                        <tr>
                                                            <td>
                                                                <img src="/uploads/images/blogs/<%= item.image %>"
                                                                    alt="<%= item.title %>" width="300" height="80">
                                                            </td>
                                                            <td>
                                                                <%= item.title %>
                                                            </td>
                                                            <td>
                                                                <% if (item.isActive) {%>
                                                                    <p>
                                                                        فعال
                                                                    </p>
                                                                    <%}else {%>
                                                                        <p>
                                                                            غیر فعال
                                                                        </p>
                                                                        <%}%>
                                                            </td>
                                                            <%}%>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
            </div>
            <!-- /Page Content -->
    </div>
    <!-- /Page Container -->
    <!-- Main Container -->

</div>


<script src="/admin/js/datatable/jquery.dataTables.min.js"></script>
<script src="/admin/js/datatable/ZeroClipboard.js"></script>
<script src="/admin/js/datatable/dataTables.tableTools.min.js"></script>
<script src="/admin/js/datatable/dataTables.bootstrap.min.js"></script>
<script src="/admin/js/datatable/datatables-init.js"></script>
<script>
    InitiateSimpleDataTable.init();
    InitiateEditableDataTable.init();
    InitiateExpandableDataTable.init();
    InitiateSearchableDataTable.init();
</script>