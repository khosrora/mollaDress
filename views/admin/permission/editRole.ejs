<!-- Main Container -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">

        <%- include("../includes/aside.ejs") %>

            <!-- Page Content -->
            <div class="page-content">
                <%- include("../../messages/error.ejs") %>
                    <%- include("../includes/breadCrumb.ejs") %>
                        <div class="page-body">
                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                <div class="col-lg-12 col-sm-12 col-xs-12">
                                    <div class="widget">
                                        <div class="widget-header bordered-bottom bordered-blue">
                                            <span class="widget-caption">ویرایش سطوح دسترسی</span>
                                        </div>
                                        <div class="widget-body">
                                            <div>
                                                <form role="form" action="/admin/editPermissions" method="post">
                                                    <input type="hidden" value="<%= role.id %>" name="id">
                                                    <div class="form-group">
                                                        <label for="name">نام</label>
                                                        <input type="" class="form-control" id="name"
                                                            placeholder="نام دسته بندی را وارد کنید" name="name"
                                                            value="<%= role.name %>">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="label">توضیح</label>
                                                        <input type="" class="form-control" id="label"
                                                            placeholder="نام دسته بندی را وارد کنید" name="label"
                                                            value="<%= role.label %>">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="price">سطوح دسترسی </label>
                                                        <div>
                                                            <select id="e2" multiple="multiple" style="width: 30%;"
                                                                name="permissionId">
                                                                <% for (let item of permissions ) {%>
                                                                    <option value="<%= item._id %>">
                                                                        <%= item.name %>
                                                                    </option>
                                                                    <%}%>
                                                            </select>
                                                        </div>
                                                    </div>

                                            </div>
                                            <button type="submit" class="btn btn-blue">ویرایش سطوح دسترسی
                                                جدید</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
            </div>
            <!-- /Page Content -->
    </div>
    <!-- /Page Container -->
    <!-- Main Container -->

</div>

<script src="/admin/js/select2/select2.js"></script>
<script>
    $("#e2").select2({
        placeholder: "Select a State",
        allowClear: true
    });
    $('.spinbox').spinbox();
</script>