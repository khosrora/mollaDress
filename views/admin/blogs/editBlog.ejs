<!-- Main Container -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">

        <%- include("../includes/aside.ejs") %>

            <!-- Page Content -->
            <div class="page-content">
                <%- include("../../messages/error.ejs") %>
                    <%- include("../includes/breadCrumb.ejs") %>
                        <div class="page-body">
                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                <div class="col-lg-12 col-sm-12 col-xs-12">
                                    <div class="widget">
                                        <div class="widget-header bordered-bottom bordered-blue">
                                            <span class="widget-caption">ایجاد بلاگ</span>
                                        </div>
                                        <div class="widget-body">
                                            <form role="form" action="/admin/editBlog" method="post">
                                                <input type="hidden" name="id" value="<%= blog.id %>">
                                                <div class="form-group">
                                                    <label for="title">عنوان</label>
                                                    <input type="" class="form-control" id="title"
                                                        placeholder="نام بلاگ را وارد کنید" name="title"
                                                        value="<%= blog.title %>">
                                                </div>
                                                <div class="form-group">
                                                    <div>
                                                        <label for="tags">تگ ها</label>
                                                        <input type="" id="tags" name="tags" data-role="tagsinput"
                                                            placeholder="توسط دکمه enter تگ ها را جدا کنید"
                                                            value="<%= blog.tags %>" />
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-12 col-sm-12 col-xs-12">
                                                        <div class="widget flat radius-bordered">
                                                            <div
                                                                class="widget-header bordered-bottom bordered-themeprimary">
                                                                <span class="widget-caption">توضیحات
                                                                    بلاگ</span>
                                                                <div class="widget-buttons">
                                                                    <a href="#" data-toggle="maximize">
                                                                        <i class="fa fa-expand"></i>
                                                                    </a>
                                                                </div>
                                                            </div>
                                                            <div class="widget-body">
                                                                <div class="widget-main no-padding">
                                                                    <textarea id="summernote" name="desc" value=""
                                                                        required><%= blog.desc %></textarea>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                        </div>
                                        <button type="submit" class="btn btn-blue">ویرایش بلاگ</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
            </div>
    </div>
    <!-- /Page Content -->
</div>
<!-- /Page Container -->
<!-- Main Container -->

</div>

<script src="/admin/js/editors/summernote/summernote.js"></script>
<script>
    $('#summernote').summernote({ height: 300 });
</script>
<!--Bootstrap Tags Input-->
<script src="/admin/js/tagsinput/bootstrap-tagsinput.js"></script>
<script>
    $("tags").tagsinput('items')
</script>