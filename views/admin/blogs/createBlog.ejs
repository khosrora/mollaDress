<style>
    .bootstrap-tagsinput {
        background-color: #fff;
        border: 1px solid #ccc;
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        display: block;
        padding: 4px 6px;
        color: #555;
        vertical-align: middle;
        border-radius: 4px;
        max-width: 100%;
        line-height: 22px;
        cursor: text;
    }

    .bootstrap-tagsinput input {
        border: none;
        box-shadow: none;
        outline: none;
        background-color: transparent;
        padding: 0 6px;
        margin: 0;
        width: auto;
        max-width: inherit;
    }
</style>

<!-- Main Container -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">

        <%- include("../includes/aside.ejs") %>

            <!-- Page Content -->
            <div class="page-content">
                <%- include("../../messages/error.ejs") %>
                    <%- include("../includes/breadCrumb.ejs") %>
                        <div class="page-body">
                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                <div class="col-lg-12 col-sm-12 col-xs-12">
                                    <div class="widget">
                                        <div class="widget-header bordered-bottom bordered-blue">
                                            <span class="widget-caption">ایجاد بلاگ</span>
                                        </div>
                                        <div class="widget-body">
                                            <form role="form" action="/admin/createBlog" method="post"
                                                enctype="multipart/form-data">
                                                <div class="form-group">
                                                    <label for="title">عنوان</label>
                                                    <input type="" class="form-control" id="title"
                                                        placeholder="نام بلاگ را وارد کنید" name="title" value="">
                                                </div>
                                                <div class="form-group">
                                                    <div>
                                                        <label for="tags">تگ ها</label>
                                                        <input type="text" id="tags" data-role="tagsinput" name="tags"
                                                            placeholder="توسط دکمه enter تگ ها را جدا کنید" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <span class="input-group-btn">
                                                            <span class="btn btn-azure btn-file">
                                                                عکس را انتخاب کنید <input type="file" name="image">
                                                            </span>
                                                        </span>
                                                        <input type="text" class="form-control" readonly>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-12 col-sm-12 col-xs-12">
                                                        <div class="widget flat radius-bordered">
                                                            <div
                                                                class="widget-header bordered-bottom bordered-themeprimary">
                                                                <span class="widget-caption">توضیحات
                                                                    بلاگ</span>
                                                                <div class="widget-buttons">
                                                                    <a href="#" data-toggle="maximize">
                                                                        <i class="fa fa-expand"></i>
                                                                    </a>
                                                                </div>
                                                            </div>
                                                            <div class="widget-body">
                                                                <div class="widget-main no-padding">
                                                                    <textarea id="summernote" name="desc"
                                                                        value=""></textarea>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                        </div>
                                        <button type="submit" class="btn btn-blue">ایجاد بلاگ
                                            جدید</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
            </div>
    </div>
    <!-- /Page Content -->
</div>
<!-- /Page Container -->
<!-- Main Container -->

</div>

