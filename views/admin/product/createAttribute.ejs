<!-- Main Container -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">

        <%- include("../includes/aside.ejs") %>

            <!-- Page Content -->
            <div class="page-content">
                <%- include("../../messages/error.ejs") %>
                    <%- include("../includes/breadCrumb.ejs") %>
                        <div class="page-body">
                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                <div class="col-lg-12 col-sm-12 col-xs-12">
                                    <div class="widget">
                                        <div class="widget-header bordered-bottom bordered-blue">
                                            <span class="widget-caption">ویژگی محصولات</span>
                                        </div>
                                        <div class="widget-body">
                                            <div>
                                                <form role="form" action="/admin/createAttribute" method="post">
                                                    <input type="hidden" value="<%= product._id %>" name="id">
                                                    <div class="form-group">
                                                        <label for="title">عنوان</label>
                                                        <input type="" class="form-control" id="title"
                                                            placeholder="نام را وارد کنید" name="title"
                                                            value="<%= formData ? formData['title'] : '' %>">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="price">قیمت </label>
                                                        <input type="" class="form-control" id="price"
                                                            placeholder="قیمت  را وارد کنید" name="price"
                                                            value="<%= formData ? formData['price'] : '' %>">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="price">سایز </label>
                                                        <div>
                                                            <select id="e2" multiple="multiple" style="width: 30%;"
                                                                name="sizes">
                                                                <option value="xs" />xs
                                                                <option value="s" />s
                                                                <option value="m" />m
                                                                <option value="l" />l
                                                                <option value="xl" />xl
                                                                <option value="xxl" />xxl
                                                                <option value="xxxl" />xxxl
                                                                <option value="xxxl" />xxxxl
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="spinbox spinbox-horizontal spinbox-two-sided">
                                                            <div class="spinbox-buttons	btn-group spinbox-buttons-left">
                                                                <button type="button" class="btn spinbox-down danger">
                                                                    <i class="fa fa-minus"></i>
                                                                </button>
                                                            </div>
                                                            <input type="text" class="spinbox-input form-control"
                                                                name="count">
                                                            <div
                                                                class="spinbox-buttons	btn-group spinbox-buttons-right">
                                                                <button type="button" class="btn spinbox-up blue">
                                                                    <i class="fa fa-plus"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="price">رنگ </label>
                                                <input type="color" class="form-control form-control-color"
                                                    id="exampleColorInput"
                                                    value="<%= formData ? formData['color'] : '' %>"
                                                    title="Choose your color" name="color">
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-blue">ایجاد ویژگی
                                            جدید</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
            </div>
    </div>
    <!-- /Page Content -->
</div>
<!-- /Page Container -->
<!-- Main Container -->

</div>


<script src="/admin/js/fuelux/spinbox/fuelux.spinbox.min.js"></script>
<!--Bootstrap Tags Input-->
<script src="/admin/js/select2/select2.js"></script>
<script>
    $("#e2").select2({
        placeholder: "Select a State",
        allowClear: true
    });
    $('.spinbox').spinbox();
</script>