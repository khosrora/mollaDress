<!-- Main Container -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">

        <%- include("../includes/aside.ejs") %>

            <!-- Page Content -->
            <div class="page-content">
                <%- include("../../messages/error.ejs") %>
                    <%- include("../includes/breadCrumb.ejs") %>
                        <div class="page-body">
                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                <div class="col-lg-12 col-sm-12 col-xs-12">
                                    <div class="widget">
                                        <div class="widget-header bordered-bottom bordered-blue">
                                            <span class="widget-caption">ساخت محصولات</span>
                                        </div>
                                        <div class="widget-body">
                                            <div>
                                                <form role="form" action="/admin/editProduct" method="post">
                                                    <input type="hidden" name="id" value="<%= product.id %>">
                                                    <div class="form-group">
                                                        <label for="title">عنوان</label>
                                                        <input type="" class="form-control" id="title"
                                                            placeholder="نام محصول را وارد کنید" name="title"
                                                            value="<%= product.title %>">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="price">قیمت محصول</label>
                                                        <input type="" class="form-control" id="price"
                                                            placeholder="قیمت محصول را وارد کنید" name="price"
                                                            value="<%= product.price %>">
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-12 col-md-6">
                                                            <div class="form-group">
                                                                <h6>دسته بندی محصول</h6>
                                                                <select id="e1" style="width: 100%;" name="categories">
                                                                    <option value="AL" />Alabama
                                                                    <option value="AK" />Alaska
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-12 col-md-6">
                                                            <div class="form-group">
                                                                <h6>برند محصول</h6>
                                                                <select id="e1" style="width: 100%;" name="brand">
                                                                    <option value="AL" />Alabama
                                                                    <option value="AK" />Alaska
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-12 col-sm-12 col-xs-12">
                                                            <div class="widget flat radius-bordered">
                                                                <div
                                                                    class="widget-header bordered-bottom bordered-themeprimary">
                                                                    <span class="widget-caption">توضیحات
                                                                        محصول</span>
                                                                    <div class="widget-buttons">
                                                                        <a href="#" data-toggle="maximize">
                                                                            <i class="fa fa-expand"></i>
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                                <div class="widget-body">
                                                                    <div class="widget-main no-padding">
                                                                        <textarea id="summernote" name="desc" ">
                                                                        <%= product.desc %>
                                                                        </textarea>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                            </div>
                                            <button type=" submit" class="btn btn-blue">
                                                ویرایش <%= product.title %>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
            </div>
            <!-- /Page Content -->
    </div>
    <!-- /Page Container -->
    <!-- Main Container -->

</div>

<script src="/admin/js/editors/summernote/summernote.js"></script>
<script>
    $('#summernote').summernote({ height: 300 });
</script>